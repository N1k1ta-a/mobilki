class secondscreen extends StatefulWidget {
  const secondscreen({super.key});

  @override
  State<secondscreen> createState() => _MyWidgetState();
}

class _MyWidgetState extends State<secondscreen> {
  final List<String> people = [
    '–ñ–µ–ª–∞–Ω–∏–µ 1',
    '–ñ–µ–ª–∞–Ω–∏–µ 2',
    '–ñ–µ–ª–∞–Ω–∏–µ 3',
    '–ñ–µ–ª–∞–Ω–∏–µ 4',
    '–ñ–µ–ª–∞–Ω–∏–µ 5',
  ];

  final Map<String, String> descriptions = {
    '–ñ–µ–ª–∞–Ω–∏–µ 1':
        '–û–ø–∏—Å–∞–Ω–∏–µ –≤–∞—à–µ–≥–æ –∂–µ–ª–∞–Ω–∏—è',
    '–ñ–µ–ª–∞–Ω–∏–µ 2':
        '–û–ø–∏—Å–∞–Ω–∏–µ –≤–∞—à–µ–≥–æ –∂–µ–ª–∞–Ω–∏—è',
    '–ñ–µ–ª–∞–Ω–∏–µ 3':
        '–û–ø–∏—Å–∞–Ω–∏–µ –≤–∞—à–µ–≥–æ –∂–µ–ª–∞–Ω–∏—è',
    '–ñ–µ–ª–∞–Ω–∏–µ 4':
        '–û–ø–∏—Å–∞–Ω–∏–µ –≤–∞—à–µ–≥–æ –∂–µ–ª–∞–Ω–∏—è',
    '–ñ–µ–ª–∞–Ω–∏–µ 5':
        '–û–ø–∏—Å–∞–Ω–∏–µ –≤–∞—à–µ–≥–æ –∂–µ–ª–∞–Ω–∏—è',
  };

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('–°–ø–∏—Å–æ–∫ –≤–∞—à–∏—Ö –∂–µ–ª–∞–Ω–∏–π')),
      body: ListView.builder(
        itemCount: people.length,
        itemBuilder: (context, index) {
          return ListTile(
            leading: Text("ü§´"),
            title: Text(people[index]),
            subtitle: Text("Secret"),
            trailing: Icon(Icons.arrow_forward_ios),
            onTap: () {
              Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (context) => thirdScreen(
                    name: people[index],
                    description: descriptions[people[index]] ?? '–ù–µ—Ç –æ–ø–∏—Å–∞–Ω–∏—è',
                  ),
                ),
              );
            },
          );
        },
      ),
    );
  }
}

class thirdScreen extends StatelessWidget {
  final String name;
  final String description;

  const thirdScreen({
    super.key,
    required this.name,
    required this.description,
  });

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('–û–ø–∏—Å–∞–Ω–∏–µ')),
      body: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Text(name),
          Row(children: [Text("ü§´"), Text("Secret")]),
          SizedBox(height: 10),
          Text(description),
        ],
      ),
    );
  }
}
